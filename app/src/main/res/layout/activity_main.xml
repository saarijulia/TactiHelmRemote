<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/app_title"
        android:hint="@string/app_name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="36dp"
         />

    <ImageView
        android:id="@+id/cyclistIcon"
        android:layout_width="138dp"
        android:layout_height="229dp"
        android:layout_below="@id/button_north_near"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:contentDescription="@string/icon_description"
        app:srcCompat="@drawable/cyclist_girl"

        />

    <Button
        android:id="@+id/button_north_far"
        android:layout_height="50dp"
        android:layout_width="50dp"

        android:hint="@string/far"

        android:background="@drawable/circle_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_title"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_orange_light"



    />

    <Button

        android:id="@+id/button_north_near"
        android:layout_height="50dp"
        android:layout_width="50dp"

        android:hint="@string/near"

        android:background="@drawable/circle_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_north_far"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_red_light"

        />

    <Button
        android:id="@+id/button_east_near"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_below="@+id/button_north_near"

        android:layout_marginLeft="0dp"
        android:layout_marginTop="91dp"
        android:layout_toRightOf="@id/cyclistIcon"
        android:background="@drawable/circle_button"

        android:backgroundTint="@android:color/holo_red_light"


        android:hint="@string/near" />
    <Button
        android:id="@+id/button_east_far"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_below="@+id/button_north_near"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="91dp"
        android:layout_toRightOf="@id/button_east_near"
        android:background="@drawable/circle_button"

        android:backgroundTint="@android:color/holo_orange_light"


        android:hint="@string/far" />

    <Button
        android:id="@+id/button_south_near"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_below="@+id/cyclistIcon"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-145dp"
        android:layout_marginTop="0dp"




        android:background="@drawable/circle_button"
        android:backgroundTint="@android:color/holo_red_light"
        android:hint="@string/near" />

    <Button
        android:id="@+id/button_south_far"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_below="@+id/button_south_near"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-145dp"

        android:layout_marginTop="16dp"


        android:layout_toRightOf="@id/button_east_near"
        android:background="@drawable/circle_button"
        android:backgroundTint="@android:color/holo_orange_light"
        android:hint="@string/far" />

    <Button
        android:id="@+id/button_west_near"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_below="@+id/button_north_near"


        android:layout_centerInParent="true"

        android:layout_marginTop="91dp"
        android:layout_marginRight="-2dp"
        android:layout_toLeftOf="@+id/cyclistIcon"
        android:background="@drawable/circle_button"
        android:backgroundTint="@android:color/holo_red_light"
        android:hint="@string/near" />


    <Button
        android:id="@+id/button_west_far"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_below="@+id/button_north_near"


        android:layout_centerInParent="true"


        android:layout_marginTop="91dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/button_west_near"
        android:background="@drawable/circle_button"
        android:backgroundTint="@android:color/holo_orange_light"
        android:hint="@string/far" />


    <TextView
        android:id="@+id/statusText"
        android:hint="@string/activity_status"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/button_south_far"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"

        />


</RelativeLayout>